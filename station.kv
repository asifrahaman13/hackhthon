# there are three screens
windowManager:
	loginWindow:
	signupWindow:
	logDataWindow:
	votingWindow:

# GUI for the login window
<loginWindow>:
	ethereumAddress : ethereumAddress
	password : password
	FloatLayout:
		size: root.width, root.height
		Label:
			text : "Ethereum Address: "
			size_hint : 0.2, 0.1
			pos_hint : {"x":0.20, "top":0.9}
		TextInput:
			id : ethereumAddress
			write_tab: False
			multiline :True
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.40, "top" : 0.9}
			
		Button:
			text : "GET ADDRESS"
			size_hint : 0.1, 0.1
			pos_hint : {"x" : 0.8, "top" : 0.9}
			on_release:
				root.getAddress()
			
		Label:
			text : "PASSWORD: "
			size_hint : 0.2, 0.1
			pos_hint : {"x" : 0.20, "top" : 0.7}
		TextInput:
			id : password
			write_tab: False
			multiline :True
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.40, "top" : 0.7}
		Button:
			text : "SIGN IN"
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.39, "top" : 0.4}
			on_release:
				root.validate()
				root.manager.transition.direction = "up"
		Button:
			text : "SIGN UP"
			size_hint : 0.3, 0.1
			pos_hint : {"x" : 0.39, "top" : 0.2}
			on_release:
				app.root.current = 'signup'
				root.manager.transition.direction = "left"			

